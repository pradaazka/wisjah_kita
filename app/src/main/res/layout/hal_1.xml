<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/yellow_bright_transparent">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_wijah"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circular_logo"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />


    <!-- Teks Judul -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih destinasi wisata sejarah"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Pilihan dengan Radio Button -->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radio_jatim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jawa Timur"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_jateng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jawa Tengah"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_jabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jawa Barat"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </RadioGroup>

    <!-- Indicator Dots -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="4dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/rounded_button"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Tombol Mulai -->
    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@drawable/rounded_button_background"
        android:layout_marginTop="24dp" />
</LinearLayout>
