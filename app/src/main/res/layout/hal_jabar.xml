<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bright_transparent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header dengan tombol panah di kiri, logo, dan profil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:contentDescription="Back Button" />

            <!-- Logo di tengah -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LOGO WISJAH"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_profile"
                android:contentDescription="User Profile" />

        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari tempat..."
            android:background="@drawable/search_background"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:inputType="text" />

        <!-- Pilih Lokasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih lokasi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Foto Lokasi Pilihan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_location1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/gedung_sate"
                android:contentDescription="Foto Lokasi 1" />

            <ImageButton
                android:id="@+id/btn_location2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/museum_konferensi"
                android:contentDescription="Foto Lokasi 2" />

            <ImageButton
                android:id="@+id/btn_location3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/monumen_jawa_barat"
                android:contentDescription="Foto Lokasi 3" />

        </LinearLayout>

        <!-- Unggulan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggulan jawa barat"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_gedung"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/gedung_sate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/gedsat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gedung Sate"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/gedsat_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Diponegoro No.22, Citarum, Bandung Wetan, Kota Bandung"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_konferensi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/museum_konferensi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/muskon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Museum Konferensi Asia Afrika"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/muskon_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Asia Afrika No.65, Braga, Sumur Bandung, Kota"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_monumen"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/monumen_jawa_barat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/monper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monumen Perjuangan Rakyat Jawa Barat"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/candipena_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Dipati Ukur, Lebakgede, Coblong, Kota Bandung"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_saung"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/saung_angklung" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/saung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saung Angklung Udjo"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/saung_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Padasuka No.118, Cibeunying Kidul, Kota Bandung"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_geologi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/museum_geologi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/musge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Museum Geologi Bandung"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/musge_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Diponegoro No.57, Cihaur Geulis, Cibeunying Kaler, Kota Bandung"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_keraton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/keraton_kasepuhan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/kasepuhan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keraton Kasepuhan"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kasepuhan_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Kasepuhan No.43, Kesepuhan, Lemahwungkuk, Kota Cirebon"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_kanoman"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/keraton_kanoman" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/kanoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keraton Kanoman"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kanoman_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Winaon, Lemahwungkuk, Kota Cirebon"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_goa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/goa_sunyaragi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/goasunya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goa Sunyaragi"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/goasunya_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunyaragi, Kesambi, Kota Cirebon"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_masjid"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/museum_agung_cipta_rasa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/masagsang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masjid Agung Sang Cipta Rasa"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/masagsang_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Jagasatru, Kesepuhan, Lemahwungkuk, Kota Cirebon"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Elemen lainnya... -->

    </LinearLayout>
</ScrollView>
