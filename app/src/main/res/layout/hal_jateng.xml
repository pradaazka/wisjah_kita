<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bright_transparent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header dengan tombol panah di kiri, logo, dan profil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:contentDescription="Back Button" />

            <!-- Logo di tengah -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LOGO WISJAH"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_profile"
                android:contentDescription="User Profile" />

        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari tempat..."
            android:background="@drawable/search_background"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:inputType="text" />

        <!-- Pilih Lokasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih lokasi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Foto Lokasi Pilihan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_location1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/lawang_sewu_semarang"
                android:contentDescription="Foto Lokasi 1" />

            <ImageButton
                android:id="@+id/btn_location2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/lawang_sewu_semarang"
                android:contentDescription="Foto Lokasi 2" />

            <ImageButton
                android:id="@+id/btn_location3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/lawang_sewu_semarang"
                android:contentDescription="Foto Lokasi 3" />

        </LinearLayout>

        <!-- Unggulan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unggulan jawa tengah"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_lawang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/lawang_sewu_semarang" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/lawangsewu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lawang Sewu"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lawangsewu_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Pemuda, Sekayu, Kec. Semarang Tengah, Kota Semarang"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_kota"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/kota_lama_semarang" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/kotalamasmrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Lama Semarang"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kotalamasmrg_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Letjen Suprapto, Kota Lama, Semarang"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_sampokong"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/sampokong" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/sampokong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sam Poo Kong"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sampokong_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Simongan Raya No.129, Bongsari, Semarang"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_agung"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/masjid" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/masgungjateng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masjid Agung Jawa Tengah"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/masgungjateng_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Gajah Raya, Sambirejo, Kec. Gayamsari, Kota Semarang"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_gedung"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/gedung_marabunta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/marabunta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gedung Marabunta"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/marabunta_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Cendrawasih No.23, Kota Lama, Semarang"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_keraton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/keraton_kasunanan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/kasunanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keraton Kasunanan Surakarta"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kasunanan_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baluwarti, Kec. Pasar Kliwon, Kota Surakarta"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_kampung"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/kampung_batik" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/kambat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kampung Batik Laweyan"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kambat_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Dr. Radjiman No.501, Laweyan, Surakarta"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_pustaka"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/museum_radya_pustaka" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/musrad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Museum Radya Pustaka"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/musrad_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C9RJ+26H, Jl. Pendopo Agung, Ngelinguk, Trowulan, Kec. Trowulan, Kabupaten Mojokerto, Jawa Timur 61362"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btn_benteng"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/benteng_vastenburg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/vestenburg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Benteng Vestenburg"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vestenburg_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surowono, Canggu, Kec. Badas, Kabupaten Kediri, Jawa Timur 64217
"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Elemen lainnya... -->

    </LinearLayout>
</ScrollView>
