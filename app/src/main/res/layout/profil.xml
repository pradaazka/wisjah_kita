<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/yellow_bright_transparent">

    <!-- Tombol Kembali di kiri atas -->
    <TextView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â†"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:layout_gravity="start"
        android:contentDescription="Back Button" />

    <!-- Gambar Logo Profil Pengguna di Tengah -->
    <ImageView
        android:id="@+id/logo_profil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_user_profile"
        android:contentDescription="Logo Profil Pengguna" />

    <!-- Text Data Pengguna di bawah gambar logo -->
    <TextView
        android:id="@+id/tv_data_pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Data Pengguna"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Spacer untuk mendorong tombol ke bawah -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Tombol Keluar di bawah sendiri dengan sudut membulat -->
    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="Keluar"
        android:textColor="#FF000000"
        android:padding="8dp"
        android:background="@drawable/rounded_button_background"
        android:gravity="center" />

</LinearLayout>
